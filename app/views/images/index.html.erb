<h1>Images</h1> 
    <thead>
        <tr>
            <th colspan="3"></th>
        </tr>
    </thead>
        <% @images.each do |image| %>
        <tr>
            <div class="row">
                <div class="col-sm-4">
                    <p><%= image.title %>
                    </p>
                    <% image_path = "/images/" + image.path %>
                    <br>
                    <%= link_to image_tag(image_path, :size => "260x180", :crop => :fill), images_display_url(id: image.id) %>
                </div>
            </div>
        </tr>
        <% end %>
<br>

<%= link_to 'Upload image', images_create_path %>
