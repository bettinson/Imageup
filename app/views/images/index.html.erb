<h1>Images</h1>
    <thead>
        <tr>
            <th colspan="3"></th>
        </tr>
    </thead>
        <% @images.each do |image| %>
        <tr>
            <div class="row">
                <div class="col-sm-4">
                    <p><%= image.title %></p>
                    <p>Posted by: <%= image.user.name %></p>
                    <% if Rails.env.production? %>
                      <% image_path = "/i/" + image.path %>
                    <% else %>
                      <% image_path = image.path %>
                    <% end %>
                  <div class="image_container">
                    <%= link_to image_tag(image_path, :size => "", :crop => :fill), images_display_url(id: image.id) %>
                  </div>
                </div>
            </div>
        </tr>
      <% end %>
<br>
